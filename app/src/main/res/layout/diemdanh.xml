<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="406dp"
            android:layout_height="264dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="117dp"
                    android:layout_height="match_parent"
                    app:srcCompat="?android:attr/textSelectHandleRight" />

                <LinearLayout
                    android:layout_width="291dp"
                    android:layout_height="117dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:gravity="bottom|right"
                        android:text="ĐIỂM DANH"
                        android:textColor="#000000"
                        android:textSize="34sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|right"
                        android:text="__________________________________"
                        android:textColor="#3F60A0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="68dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:text="Ngày"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/dayEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:hint="Ngày"
                            android:inputType="number" />

                        <EditText
                            android:id="@+id/monthEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Tháng"
                            android:inputType="number" />

                        <EditText
                            android:id="@+id/yearEditText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Năm"
                            android:inputType="number" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="366dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="108dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Chọn khoa"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/class_spinner"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom|center"
                            android:hint="Chọn khoa" />


                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            app:cardBackgroundColor="#FFFFFF"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="7dp"
                            app:cardPreventCornerOverlap="true">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="TextView" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="363dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="109dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Chọn lớp"
                            android:textColor="#000000"
                            android:textSize="20sp" />

                        <Spinner
                            android:id="@+id/class_spinner2"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:gravity="bottom|center" />
                        <!--                        android:prompt="Chọn lớp" />-->

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="30dp"
                            app:cardBackgroundColor="#FFFFFF"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="7dp"
                            app:cardPreventCornerOverlap="true">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="100dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1"
                                android:text="TextView" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="466dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center|left"
                android:text="__________________________________"
                android:textColor="#3F60A0" />

            <ListView
                android:id="@+id/listView_Diemdanh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
                app:layout_constraintVertical_bias="1.0" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
