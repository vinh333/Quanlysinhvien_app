<!-- activity_bang_diem.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView34"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BẢNG ĐIỂM SINH VIÊN"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Môn học" />

    <Spinner
        android:id="@+id/spinner_mon_hoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lần thi" />

    <Spinner
        android:id="@+id/spinner_lan_thi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_mon_hoc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Học kỳ" />

    <Spinner
        android:id="@+id/spinner_hoc_ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_lan_thi"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button_apply_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Lọc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_masv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Mã SV"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_mamonhoc"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Mã Môn Học"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_lanthi"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Lần Thi"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_hocky"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Học Kỳ"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_diem"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="Điểm"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_view_bang_diem"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <!-- Spinner for Mon Hoc -->

    <!-- Spinner for Lan Thi -->

    <!-- Spinner for Hoc Ky -->

    <!-- EditText for Diem -->

    <!-- Button to Apply Filter -->
</LinearLayout>
